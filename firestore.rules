rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Trips collection - only admins can write, everyone can read
    match /trips/{tripId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Registrations collection
    match /registrations/{registrationId} {
      // Anyone can create a registration (public form)
      allow create: if true;

      // Allow reading registrations to see occupied seats (public)
      // This is needed for the registration form to show which seats are taken
      allow read: if true;

      // Only authenticated users (admins) can update/delete
      allow update, delete: if request.auth != null;
    }

    // Gift Cards collection
    match /giftCards/{giftCardId} {
      // Anyone can read gift cards (public reveal page)
      allow read: if true;

      // Only authenticated users (admins) can create gift cards
      allow create: if request.auth != null;

      // Only authenticated users (admins) can delete gift cards
      allow delete: if request.auth != null;

      // Allow anyone to update the redeemed status (when user opens the gift)
      // Only authenticated users can update other fields
      allow update: if request.auth != null ||
                       (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['redeemed', 'redeemedAt']));
    }
  }
}
